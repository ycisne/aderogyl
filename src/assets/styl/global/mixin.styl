$text-shadow()
    text-shadow 2px 2px 5px rgba(0,0,0,0.7)


@keyframes fadeIn
    0%
        opacity .1
    10%
        opacity .5
    20%
        opacity 1
    80%
        opacity 1
    90%
        opacity .5
    100%
        opacity .1
