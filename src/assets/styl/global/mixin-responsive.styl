$media_queries = {
    mobile_all: "only screen and (min-width: 320px) and (max-width: 1023px), only screen and (max-width: 320px)",
    landscape: "only screen and (orientation: landscape)",
    portrait: "only screen and (orientation: portrait)",
    pixelratio1: "only screen and (-webkit-min-device-pixel-ratio : 1)",
    pixelratio2: "only screen and (-webkit-min-device-pixel-ratio : 2)",
    pixelratio3: "only screen and (-webkit-min-device-pixel-ratio : 3)",

    /// Mobile
    mobile_not_tablet: "only screen and (min-width: 320px) and (max-width: 767px), only screen and (max-width: 320px), only screen and (min-device-width: 320px) and (max-device-width: 767px), only screen and (max-device-width: 320px)",
    mobile320: "only screen and (min-width: 320px) and (max-width: 480px), only screen and (min-device-width: 320px) and (max-device-width: 480px), only screen and (max-device-width: 320px)",
    mobile375: "only screen and (min-width: 375px) and (max-width: 668px), only screen and (min-device-width: 375px) and (max-device-width: 668px)",
    mobile360: "only screen and (min-width: 360px) and (max-width: 640px), only screen and (min-device-width: 360px) and (max-device-width: 640px)",
    mobile480: "only screen and (min-width: 480px) and (max-width: 568px), only screen and (min-device-width: 480px) and (max-device-width: 568px)",
    mobile568: "only screen and (min-width: 568px) and (max-width: 768px), only screen and (min-device-width: 568px) and (max-device-width: 768px)",
    
    /// Modelos específicos de teléfono
    // iPhone 
    //iphone4: "only screen and (min-device-width: 320px) and (max-device-width: 480px)",
    iphone5: "only screen and (min-device-width: 320px) and (max-device-width: 568px)",
    //iphone6-7-8: "only screen and (min-device-width: 375px) and (max-device-width: 667px)",
    iphone_plus6-7-8: "only screen and (min-device-width: 414px) and (max-device-width: 736px) and (-webkit-min-device-pixel-ratio : 3)",
    iphonex: "only screen and (min-device-width: 414px) and (max-device-width: 812px) and (-webkit-min-device-pixel-ratio : 3)",
    iphonexs: "only screen and (min-device-width: 414px) and (max-device-width: 896px)",
    
    // --- Samsung Galaxy S4, S5, S7 y S8, HTC
    samsung_galaxy: "only screen and (min-device-width: 360px) and (max-device-width: 640px) and (-webkit-min-device-pixel-ratio : 3)",
    google_pixel: "only screen and (min-device-width: 411px) and (max-device-width: 731px)",
    google_pixel_xl: "only screen and (min-device-width: 411px) and (max-device-width: 823px)",
  
    /// Tablet
    tablet768: "only screen and (min-device-width: 768px) and (max-device-width: 1024px), only screen and (min-width: 768px) and (max-width: 1024px)",
    tablet1024: "only screen and (min-device-width: 768px) and (max-device-width: 1024px), only screen and (min-device-width: 1024px) and (max-device-width: 1279px), only screen and (min-width: 768px) and (max-width: 1024px), only screen and (min-width: 1024px) and (max-width: 1279px)",
    
    /// Desktop
    desktop1280: "only screen and (min-width:1280px) and (max-width: 1599px)",
    desktop1400: "only screen and (min-width:1400px) and (max-width: 1599px) and (min-height:700px) and (max-height:800px)",
    desktop1600: "only screen and (min-width:1600px) and (max-width: 1899px)",
    desktop_extended: "only screen and (min-width:1900px)",
    desktop_all: "only screen and (min-width:1024px)",

    /// ASPECT RATIO
    /*

    Para calcular nuevos aspect ratio: https://andrew.hedges.name/experiments/aspect_ratio/

    La siguiente tabla muestra algunos de los aspect ratio usados en estos mixin:

    |       RESOLUCION      |       ASPECT RATIO        |       DISPOSITIVOS USADOS         |         
    _________________________________________________________________________________________

    |   1920px / 1080px     |           16/9            |       
    |   1920px / 1024px     |           15/8            |
    |   414px / 812px       |           207/406         |       iPhone X                    |
    |   640px / 360px       |           16/9            |       Samsung Galaxy (Landscape)  |
    |   360px / 640px       |           9/16            |       Samsung Galaxy (Portrait)   |
    |   568px / 480px       |           71/60           |
    |   480px / 568px       |           60/71           |
    |   320px / 480px       |           2/3             |       iPhone 4

    */
    aspect_ratio_480: "(min-aspect-ratio: 60/71)"
}

$responsive(breakpoints, free = false)
    conditions = ()
    
    if free
        push(conditions, free)
    else
        for breakpoint in breakpoints
            push(conditions, $media_queries[breakpoint])
    
    conditions = join(", ", conditions)
    @media conditions
        {block}