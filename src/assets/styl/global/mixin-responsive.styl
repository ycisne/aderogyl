$media_queries = {
    mobile_all: "only screen and (min-width: 320px) and (max-width: 1023px), only screen and (max-width: 320px)",
    landscape: "only screen and (orientation: landscape)",
    portrait: "only screen and (orientation: portrait)",
    pixelratio2: "only screen and (-webkit-min-device-pixel-ratio : 2)",
    pixelratio3: "only screen and (-webkit-min-device-pixel-ratio : 3)",

    /// Mobile
    mobile_not_tablet: "only screen and (min-width: 320px) and (max-device-width: 767px), only screen and (max-device-width: 320px)",
    mobile320: "only screen and (min-device-width: 320px) and (max-device-width: 480px), only screen and (max-device-width: 320px)",
    mobile375: "only screen and (min-device-width: 375px) and (max-device-width: 668px)",
    mobile360: "only screen and (min-device-width: 360px) and (max-device-width: 640px)",
    mobile480: "only screen and (min-device-width: 480px) and (max-device-width: 568px)",
    mobile568: "only screen and (min-device-width: 568px) and (max-device-width: 768px)",
    
    /// Modelos específicos de teléfono
    // iPhone 
    //iphone4: "only screen and (min-device-width: 320px) and (max-device-width: 480px)",
    //iphone5: "only screen and (min-device-width: 320px) and (max-device-width: 568px)",
    //iphone6-7-8: "only screen and (min-device-width: 375px) and (max-device-width: 667px)",
    iphone_plus6-7-8: "only screen and (min-device-width: 414px) and (max-device-width: 736px)",
    iphonex: "only screen and (min-device-width: 414px) and (max-device-width: 812px) and (-webkit-min-device-pixel-ratio : 3)",
    iphonexs: "only screen and (min-device-width: 414px) and (max-device-width: 896px)",
    // --- Samsung Galaxy S4, S5, S7 y S8, HTC
    samsung_galaxy: "only screen and (min-device-width: 360px) and (max-device-width: 640px)",
    google_pixel: "only screen and (min-device-width: 411px) and (max-device-width: 731px)",
    google_pixel_xl: "only screen and (min-device-width: 411px) and (max-device-width: 823px)",
  
    /// Tablet
    tablet768: "only screen and (min-device-width: 768px) and (max-device-width: 1024px)",
    tablet1024: "only screen and (min-device-width: 768px) and (max-device-width: 1024px), only screen and (min-device-width: 1024px) and (max-device-width: 1279px)",
    
    /// Desktop
    desktop1280: "only screen and (min-device-width:1280px) and (max-device-width: 1599px)",
    desktop1400: "only screen and (min-device-width:1400px) and (max-device-width: 1599px) and (min-device-height:700px) and (max-device-height:800px)",
    desktop1600: "only screen and (min-device-width:1600px) and (max-device-width: 1899px)",
    desktop_extended: "only screen and (min-device-width:1900px)",
    desktop_all: "only screen and (min-width:1024px)"
}

$responsive(breakpoints, free = false)
    conditions = ()
    
    if free
        push(conditions, free)
    else
        for breakpoint in breakpoints
            push(conditions, $media_queries[breakpoint])
    
    conditions = join(", ", conditions)
    @media conditions
        {block}