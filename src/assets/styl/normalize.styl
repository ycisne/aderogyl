@require globalStyl

body, html
    height 100%
    font-family $font-primary
    font-size 18px

body
    font-feature-settings "ss08"
    background-image '../img/fondo3.jpg'

.container
    max-width $max-width
    min-width $min-width

img 
    max-width 100%
    max-height 100% 
    width auto
    height auto

.ad-dodge-color
    mix-blend-mode color-dodge
    position absolute
    width 100%
    height 100%
    z-index 1

.ad-caption
    font-size 1em
    color white
    text-transform uppercase
