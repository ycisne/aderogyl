@require globalStyl
body, html
    height 100%
    font-family $font-primary
    font-size 18px
    min-width 320px
body
    font-feature-settings "ss08"
    background-image url(../img/fondo3.jpg)
    background-attachment fixed
    background-position bottom center
    background-repeat no-repeat
    background-size cover
    $scrollbar(#999)
.ad-brillo
    background-image url(../img/fondo1.jpg)

.container
    max-width $max-width
    min-width $min-width

img 
    max-width 100%
    max-height 100% 
    width auto
    height auto

.ad-dodge-color
    //mix-blend-mode color-dodge
    position absolute
    width 80%
    height auto
    top 20%
    left 20%
    z-index 1
    animation fadeIn 3s infinite ease-out
    +$responsive(mobile_all)
        +$responsive(landscape)
            left 10%
            top 30%
    +$responsive(iphonex)
        +$responsive(landscape)
            left 20%
            width 60%
            top 20%
    +$responsive(desktop1600)
        width 70%
.carousel-fade
    .item
        opacity 0
        transition opacity 1
    .item.active,
    .next.left
    .prev.right
        opacity 1
    .active.left
    .active.right
        left 0
        opacity 0
        z-index 1
.overflowHidden
    overflow hidden
    padding-right 10px
    .ad__header-top-menu,
    .ad__queEs,
    .ad__beneficios,
    #presentaciones,
    .ad__faqs,
    .ad_footer
        width calc(100% - 10px)
    .ad__header-logo
        width calc(35% - 60px)
    .ad__header-menu
        width calc(20% - 10px)

.ad
    &__mobile
        display block
        +$responsive(landscape)
            display none
    &__desktop
        display none
        +$responsive(landscape)
            display block