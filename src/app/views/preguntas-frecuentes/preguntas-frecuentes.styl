@require globalView

.ad__faqs
    height 100%
    width 100%
    padding 15% 30px 30px 25%
    display flex
    align-items center
    position relative
    &-listado
        z-index 1
        ul, li
            list-style-type none
            margin 0
            padding 0
        li
            position relative
            text-transform uppercase
            display flex
            align-items center
            &:before
                content ''
                background-image url(../img/plus.svg)
                background-repeat no-repeat
                background-size contain
                width 1.5em
                height 1.5em
            a 
                padding 0 .6em
                color white
                font-size 2.3em
                $text-shadow()
                transition .3em
                &:hover
                    text-decoration none
                    opacity .8
    &-modales
        position fixed
        top 0
        left 0
        z-index 1
    &-modal
        &-title
            width 100%
            a
                color white
                font-size 2.4em
                text-transform uppercase
                $text-shadow()
                transition .3s
                display flex
                align-items center
                margin 0 0 40px 60px
                span 
                    display inline-block
                    margin-left 25px
                &:before
                    content ''
                    background-image url(../img/minus.svg)
                    background-repeat no-repeat
                    background-size contain
                    width .7em
                    height .7em
                &:hover
                    text-decoration none
                    opacity .5
        &-content
            display flex
            font-size 2em
            line-height 1.1em
            $text-shadow()
    &1-left,
    &4-left,
    &5-left
        width 38%
        padding 0 20px
        p
            margin 0 1.7em
            margin-top -1.5em
    &1-center,
    &4-center,
    &5-center
        width 24%
        padding 10px
        position relative
        .ad-dodge-color
            display flex
            align-items flex-start
            margin-left -20%
            width 150%
            height 150%
    &1-right,
    &4-right,
    &5-right
        width 38%
        padding 10px
        p
            margin 0.3em 1.5em
    &2-left
        width 60%
        img 
            margin-bottom -50px
    &2-right
        text-align center
        img 
            width 200px
    &3-left
        width 45%
        padding-right 5%
        align-self center
        img
            margin-bottom -50px
    &3-right
        position relative
        text-align center
        .ad-dodge-color
            display flex
            align-items flex-start
            margin-left -20%
            width 150%
            height 150%
    &4-left,
    &4-right
        width 36%
    &4-center
        width 28%
    &5-left,
    &5-right
        width 35%
    &5-center
        width 40%
        margin-left -7%
    &6-left
        width 30%
        align-self center
        img
            margin-bottom -40px
    &6-right
        text-align center
        img
            width 75%


        