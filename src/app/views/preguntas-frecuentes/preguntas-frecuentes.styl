@require globalView

.ad__faqs
    $parallax('../img/fondo3.jpg')
    padding-left 25%
    padding-top 10%
    background-attachment inherit
    &-listado
        z-index 1
        ul, li
            list-style-type none
            margin 0
            padding 0
        li
            position relative
            text-transform uppercase
            display flex
            align-items center
            &:before
                content ''
                background-image url(../img/plus.svg)
                background-repeat no-repeat
                background-size contain
                width 1.5em
                height 1.5em
            a 
                padding 0 .6em
                color white
                font-size 2.3em
                $text-shadow()
                transition .3em
                &:hover
                    text-decoration none
                    opacity .8
    &-modales
        position fixed
        top 0
        left 0
        z-index 1
    &-modal
        visibility hidden
        position fixed
        opacity 0
        background $color-Blue-Smalt-transparent
        color white
        width 100%
        height 100%
        display flex
        justify-content center
        align-items center
        transition 1s
        &-container
            width 60%
        &-title
            width 100%
            padding-left 60px
            a
                color white
                font-size 2.4em
                text-transform uppercase
                $text-shadow()
                transition .3s
                display flex
                align-items center
                margin 0 0 40px 100px
                span 
                    display inline-block
                    margin-left 25px
                &:before
                    content ''
                    background-image url(../img/minus.svg)
                    background-repeat no-repeat
                    background-size contain
                    width .7em
                    height .7em
                &:hover
                    text-decoration none
                    opacity .5
        &-content
            display flex
            font-size 2em
            $text-shadow()
    &1-left
        width 38%
        padding 0 20px
        p
            margin 0 1.7em
            margin-top -1.5em
    &1-center
        width 24%
        padding 10px
        position relative
        .ad-dodge-color
            display flex
            align-items flex-end
            margin-left -35px
    &1-right
        width 38%
        padding 10px
        p
            margin 0.3em 1.5em