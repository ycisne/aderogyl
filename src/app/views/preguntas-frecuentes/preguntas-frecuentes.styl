@require globalView

.ad__faqs
    width 75%
    padding 15% 30px 0 0
    margin-left 25%
    min-height 80%
    height auto
    display flex
    align-items center
    position relative
    z-index 2
    &-listado
        z-index 1
        sup 
            font-size .6em
            top -.8em
        ul, li
            list-style-type none
            margin 0
            padding 0
        li
            position relative
            text-transform uppercase
            display flex
            align-items center
            &:before
                content ''
                background-image url(../img/arrow.svg)
                background-repeat no-repeat
                background-size contain
                width 1.5em
                height 1.5em
                cursor pointer
                transition transform .5s
            &:hover
                &:before
                    background-image url(../img/arrow-hover.svg)
                    transform rotate(-45deg)
            /*&:hover
                img
                    transform rotate(-45deg)
            img
                margin-right .5em
                transition transform .5s*/
            a 
                padding 0 .6em
                color white
                font-size 1.8em
                $text-shadow()
                transition color 1s
                +$responsive(desktop1600 desktop_extended)
                    font-size 2.3em
                &:hover
                    text-decoration none
                    color $color-Green-Citrus
    &-modales
        position fixed
        top 0
        left 0
        z-index 5
    &-modal
        &-title
            width 100%
            sup 
                font-size .6em
                top -.8em
            a
                color white
                font-size 1.9em
                text-transform uppercase
                $text-shadow()
                transition color 1s
                display flex
                align-items center
                margin 0 0 40px 60px
                +$responsive(desktop1280)
                    font-size 2em
                +$responsive(desktop1600 desktop_extended)
                    font-size 2.4em
                span 
                    display inline-block
                    margin-left 25px
                &:before
                    content ''
                    background-image url(../img/close-modal.png)
                    background-repeat no-repeat
                    background-size contain
                    width .8em
                    height .8em
                    transition transform .5s
                &:hover
                    text-decoration none
                    color $color-Green-Citrus
                    &:before
                        opacity .5
        &-content
            display flex
            font-size 1em
            line-height 1.3em
            font-family $font-alternative-condensed
            font-weight 300
            $text-shadow()
            +$responsive(desktop1280 desktop1600)
                font-size 1.3em
            +$responsive(desktop_extended)
                font-size 1.5em
            sup 
                font-size .6em
                top -.8em
    &1-left,
    &4-left,
    &5-left
        width 38%
        padding 0 20px
        p
            margin 0 1.7em
            //margin-top -1.5em
    &1-center,
    &4-center,
    &5-center
        width 24%
        padding 10px
        position relative
        .ad-dodge-color
            display flex
            align-items flex-start
            margin-left -20%
            width 150%
            height 150%
            z-index -1
    &5-center
        .ad-dodge-color
            width 100%
            width 100%
    &1-right,
    &4-right,
    &5-right
        width 38%
        padding 10px
        p
            margin 0.3em 1.5em
    &2-left
        width 40%
        padding-right 15px
    &2-right
        width 60%
        text-align center
        img 
            width 33%
    &3-left
        width 45%
        padding-right 5%
        align-self center
    &3-right
        width 55%
        position relative
        text-align center
        .ad-dodge-color
            display flex
            align-items flex-start
            width 100%
            height 100%
            margin 0
            +$responsive(desktop1600 desktop_extended)
                margin-left -20%
    &4-left,
    &4-right
        width 36%
    &4-center
        width 28%
    &5-left,
    &5-right
        width 35%
    &5-center
        width 40%
        margin-left -7%
    &6-left
        width 30%
        align-self center
    &6-right
        text-align center
        img
            width 75%