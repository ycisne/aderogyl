@require globalView

.ad__beneficios
    $parallax('../img/fondo2.jpg')
    padding-right 0
    overflow hidden
    .ad-dodge-color
        width 50%
    &-vitaminas
        position relative
        height 65%
        margin-left 25%
        margin-top 15%
        width 100%
        z-index 1
        &-a,
        &-c,
        &-d
            position absolute
            transition 1.5s
            z-index 1
            .ad__beneficios-vitaminas-descripcion
                left 0
                width 90%
                display none
            &:hover
                .ad__beneficios-vitaminas-descripcion
                    display block
                    +$responsive(desktop_extended)
                        width 120%
        &-a
            top 7%
            left 10%
            .ad__beneficios-vitaminas-title
                color $color-Orange-Tangerine
            &:hover
                left -15%
                +$responsive(desktop1280 desktop1600)
                    left -2%
                +$responsive(desktop_extended)
                    left -15%
                .ad__beneficios-vitaminas-icono
                    transform rotate(28deg)
                .ad__beneficios-vitaminas-descripcion
                    left 23%
                    top 10%
                    padding-left 15%
                    width 90%
                    font-size 1.2em
                    +$responsive(desktop1280 desktop1600)
                        left 27%
                        padding-left 21%
                    +$responsive(desktop_extended)
                        top 20%
                        left 44%
                        padding-left 14%
        &-c
            bottom 0
            left 22%
            +$responsive(tablet768 desktop1024)
                font-size 0.8em
            &:hover
                left 0
                .ad__beneficios-vitaminas-icono
                    transform rotate(-20deg)
                .ad__beneficios-vitaminas-descripcion
                    width 120%
                    left 28%
                    top 9%
                    padding-left 15%
                    +$responsive(desktop1280 desktop1600 desktop_extended)
                        top 16%
                        left 49%
                        padding-left 18%
                        width 150%
                    +$responsive(desktop1280 desktop1600)
                        left 46%
            .ad__beneficios-vitaminas-title
                color $color-Orange-Tangerine
        &-d
            top 0
            left 47%
            +$responsive(tablet768 desktop1024)
                font-size 0.8em
            +$responsive(desktop_extended)
                left 35%
            &:hover
                left 30%
                .ad__beneficios-vitaminas-icono
                    transform rotate(18deg)
                .ad__beneficios-vitaminas-descripcion
                    left 30%
                    padding-left 19%
                    top 5%
                    +$responsive(desktop1280 desktop1600)
                        top 6%
                        left 36%
                        padding-left 22%
                        width 110%
                    +$responsive(desktop_extended)
                        top 10%
                        left 51%
                        padding-left 23%
            .ad__beneficios-vitaminas-title
                color $color-Green-Citrus
        &-icono
            transition .3s
            &.vitamina-a
                width 40%
                +$responsive(desktop1280 desktop1600)
                    width 47%
                +$responsive(desktop_extended)
                    width 60%
            &.vitamina-c
                width 45%
                +$responsive(desktop1280 desktop1600)
                    width 63%
                +$responsive(desktop_extended)
                    width 70%
            &.vitamina-d
                width 50%
                +$responsive(desktop1280 desktop1600)
                    width 60%
                +$responsive(desktop_extended)
                    width 75%
        &-descripcion
            background $color-Brown-Maroon-transparent
            border-radius 20px
            padding 10px 20px
            position absolute
            z-index -1
            font-size 1.5em
            line-height 1.1em
            color white
            font-family $font-roboto-condensed
        &-title
            font-family $font-secondary
            font-size 1.3em
            line-height 1.2em
    &-footer
        position absolute
        bottom 10px
        width 100%
        text-align right
        right 20%