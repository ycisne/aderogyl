@require globalView

.ad__beneficios
    $parallax('../img/fondo2.jpg')
    &-vitaminas
        position relative
        height 65%
        margin-left 25%
        margin-top 15%
        width 100%
        z-index 1
        &-a,
        &-c,
        &-d
            position absolute
            transition 1.5s
            z-index 1
            .ad__beneficios-vitaminas-descripcion
                left 0
                width 200px
                visibility hidden
                opacity 0
            &:hover
                .ad__beneficios-vitaminas-descripcion
                    width 450px
                    visibility visible
                    opacity 1
        &-a
            top 7%
            left 10%
            .ad__beneficios-vitaminas-title
                color $color-Orange-Tangerine
            &:hover
                left -15%
                .ad__beneficios-vitaminas-icono
                    transform rotate(28deg)
                .ad__beneficios-vitaminas-descripcion
                    top calc(50% - 75px)
                    left 179px
                    padding-left 60px
        &-c
            bottom 0
            left 22%
            &:hover
                left 0
                .ad__beneficios-vitaminas-icono
                    transform rotate(-20deg)
                .ad__beneficios-vitaminas-descripcion
                    top calc(50% - 82px)
                    left 192px
                    padding-left 85px
                    width 600px
            .ad__beneficios-vitaminas-title
                color $color-Orange-Tangerine
        &-d
            top 0
            left 35%
            &:hover
                left 32%
                .ad__beneficios-vitaminas-icono
                    transform rotate(18deg)
                .ad__beneficios-vitaminas-descripcion
                    top calc(50% - 100px)
                    left 195px
                    padding-left 85px
            .ad__beneficios-vitaminas-title
                color $color-Green-Citrus
        &-icono
            transition .3s
            &.vitamina-a
                width 60%
            &.vitamina-c
                width 70%
            &.vitamina-d
                width 75%
        &-descripcion
            background $color-Brown-Maroon-transparent
            border-radius 20px
            padding 20px
            position absolute
            z-index -1
            font-size 30px
            line-height 30px
            color white
        &-title
            font-family $font-secondary
            font-size 40px
            line-height 45px
    &-footer
        position absolute
        bottom 10px
        width 100%
        text-align right
        right 20%