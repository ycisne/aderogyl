@require globalView

.ad__beneficios
    $parallax()
    padding-right 0
    overflow hidden
    +$responsive(mobile_not_tablet)
        +$responsive(portrait)
            +$responsive(mobile375 mobile360)
                padding 30px 0 30px 5px
        +$responsive(landscape)
            overflow visible
    &-vitaminas
        position relative
        height 65%
        margin-left 25%
        margin-top 15%
        width 100%
        z-index 1
        +$responsive(mobile_not_tablet)
            height 85%
            margin-left 0
            margin-top 20%
            display flex
            flex-flow row wrap
            height auto
        +$responsive(iphonex)
            +$responsive(landscape)
                margin-left 0
                width 95%
                display flex
                font-size .7em
                align-items flex-start
                margin-top 10%
        &-a,
        &-c,
        &-d
            position relative
            transition 1.5s
            z-index 1
            +$responsive(mobile_not_tablet)
                width 95%
                display flex
                pointer-events none
                align-items center
            +$responsive(iphonex)
                +$responsive(landscape)
                    display flex
                    flex-flow row wrap
                    width 33%
                    top 0 !important 
                    left 0 !important
                    position relative
            +$responsive(tablet768 desktop_all)
                position absolute
            .ad__beneficios-vitaminas-descripcion
                left 0
                width 90%
                font-size 1em
                display block
                background $color-Brown-Maroon-transparent
                border-radius 20px
                padding 10px 20px
                position absolute
                z-index -1
                font-size 1.5em
                line-height 1.1em
                color white
                font-family $font-alternative-condensed
                +$responsive(mobile_not_tablet)
                    border-radius 10px
                    font-size .8em
                    padding-left 13%
                    margin-left -12%
                    width 90%
                    margin-top -3%
                    position relative                        
                    +$responsive(portrait)
                        font-size .7em
                +$responsive(iphone5)
                    +$responsive(landscape)
                        margin-left -9%
                        justify-self flex-end
                        font-size .62em
                +$responsive(iphonex)
                    +$responsive(landscape)
                        display block
                        width 90%
                        position relative
                        margin auto
                +$responsive(tablet768)
                    font-size 1em
                +$responsive(tablet768 desktop_all)
                    display none
                +$responsive(desktop1280 desktop1600 desktop_extended)
                    font-size 1.2em
                ul
                    +$responsive(mobile_not_tablet)
                        margin 0
                        padding 0 0 0 16px
            &:hover
                .ad__beneficios-vitaminas-descripcion
                    +$responsive(tablet768 desktop_all)
                        display block
                    +$responsive(desktop_extended)
                        width 120%
        &-a
            +$responsive(mobile_not_tablet)
                order 1
            +$responsive(tablet768 desktop_all)
                top 7%
                left 10%
            +$responsive(desktop1600)
                top -7%
            .ad__beneficios-vitaminas-title
                color $color-Orange-Tangerine
            /*.ad__beneficios-vitaminas-descripcion
                +$responsive(mobile_not_tablet)
                    width 77%
                    margin-left 20%
                    margin-top 6%
                    padding-left 10%
                    +$responsive(portrait)
                        width 80%*/
            &:hover
                +$responsive(tablet1024)
                    left -15%
                +$responsive(desktop1280 desktop1600)
                    left -2%
                +$responsive(desktop_extended)
                    left -5%
                .ad__beneficios-vitaminas-icono
                    transform rotate(28deg)
                .ad__beneficios-vitaminas-descripcion
                    +$responsive(tablet768 desktop_all)
                        left 23%
                        top 10%
                        padding-left 15%
                        width 90%
                    +$responsive(desktop1280 desktop1600)
                        left 27%
                        padding-left 21%
                    +$responsive(desktop_extended)
                        top 20%
                        left 44%
                        padding-left 14%
        &-c
            +$responsive(mobile_not_tablet)
                order 3
            +$responsive(tablet768 desktop_all)
                bottom 0
                left 22%
            .ad__beneficios-vitaminas-descripcion
                /*+$responsive(mobile_not_tablet)
                    width 81%
                    margin-left 16%
                    margin-top 4%
                    padding-left 18%
                    +$responsive(landscape)
                        margin-top 0
                    +$responsive(portrait)
                        +$responsive(mobile375 mobile360)
                            margin-left 15%
                        +$responsive(mobile360)
                            ul
                                padding-left 23px*/
                +$responsive(tablet768)
                    margin-top 3%
            &:hover
                left 0
                +$responsive(tablet768)
                    left 0
                    +$responsive(portrait)
                        left -16%
                .ad__beneficios-vitaminas-icono
                    transform rotate(-20deg)
                .ad__beneficios-vitaminas-descripcion
                    +$responsive(tablet768)
                        +$responsive(portrait)
                            widows 120%
                            left 25%
                            top -4%
                            padding-left 18%
                    +$responsive(desktop_all)
                        width 125%
                        left 28%
                        top 12%
                        padding-left 15%
                    +$responsive(desktop1280 desktop1600 desktop_extended)
                        top 16%
                        left 49%
                        padding-left 18%
                        width 150%
                    +$responsive(desktop1280 desktop1600)
                        left 46%
            .ad__beneficios-vitaminas-title
                color $color-Orange-Tangerine
        &-d
            +$responsive(mobile_not_tablet)
                order 2
                +$responsive(portrait)
                    margin-top 1%
                    margin-bottom 3%
            +$responsive(tablet768 desktop_all)
                top 0
                left 47%
            +$responsive(tablet768)
                +$responsive(portrait)
                    top 33%
                    left 30%
            +$responsive(desktop1600)
                top -12%
            +$responsive(desktop_extended)
                left 35%
            .ad__beneficios-vitaminas-descripcion
                /*+$responsive(mobile_not_tablet)
                    width 83%
                    margin-left 15%
                    margin-top 3%
                    padding-left 17%
                    +$responsive(portrait)
                        +$responsive(mobile375 mobile360)
                            margin-left 15%*/
                +$responsive(tablet768)
                    +$responsive(portrait)
                        top 16%
                        left 36%
                        padding-left 15%
                        width 120%
                    
            &:hover
                left 30%
                +$responsive(tablet768)
                    +$responsive(portrait)
                        left -30%
                .ad__beneficios-vitaminas-icono
                    transform rotate(18deg)
                .ad__beneficios-vitaminas-descripcion
                    +$responsive(desktop_all)
                        left 30%
                        padding-left 19%
                        top 12%
                    +$responsive(desktop1280 desktop1600)
                        top 14%
                        left 36%
                        padding-left 22%
                        width 110%
                    +$responsive(desktop_extended)
                        top 21%
                        left 51%
                        padding-left 23%
            .ad__beneficios-vitaminas-title
                color $color-Green-Citrus
        &-icono
            transition .3s
            &.vitamina-a
                /*+$responsive(mobile_not_tablet)
                    width 30%*/
                +$responsive(mobile480 landscape)
                    margin-bottom 2%
                +$responsive(tablet1024)
                    width 40%
                +$responsive(desktop1280 desktop1600)
                    width 47%
                +$responsive(desktop_extended)
                    width 60%
            &.vitamina-c
                /*+$responsive(mobile_not_tablet)
                    width 35%*/
                +$responsive(tablet1024)
                    width 45%
                +$responsive(desktop1280 desktop1600)
                    width 63%
                +$responsive(desktop_extended)
                    width 70%
            &.vitamina-d
                /*+$responsive(mobile_not_tablet)
                    width 33%*/
                +$responsive(tablet1024)
                    width 50%
                +$responsive(desktop1280 desktop1600)
                    width 60%
                +$responsive(desktop_extended)
                    width 75%
            &.vitamina-a,
            &.vitamina-c,
            &.vitamina-d
                +$responsive(mobile_not_tablet)
                    width 33%
                    margin 0
                    +$responsive(landscape)
                        width 14%
                        +$responsive(mobile480)
                            width 22%
                        +$responsive(iphone5)
                            width  14%
                +$responsive(iphonex)
                    +$responsive(landscape)
                        width 35%
                        margin auto
                        position relative
        &-title
            font-family $font-secondary
            font-size 1.3em
            line-height 1.2em
    &-footer
        position absolute
        bottom 10px
        width 100%
        text-align right
        right 20%