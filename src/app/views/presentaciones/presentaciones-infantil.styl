@require globalView

.ad__modal-infantil
    width 75%
    font-size .8em
    margin-left 22%
    margin-top 8%
    position absolute
    +$responsive(mobile_all)
        width 100%
        //margin 20% 0 5% 0
        margin 0
        position relative
        +$responsive(portrait)
            +$responsive(mobile480)
                margin-top 22%
    +$responsive(tablet768)
        margin-top 0
    +$responsive(desktop1280)
        margin-top 15%
        width 55%
    +$responsive(desktop1400)
        margin-top 10%
    +$responsive(desktop1600)
        margin-top 10%
        width 40%
        margin-left 28%
    +$responsive(desktop_extended)
        width 48%
        margin-left 25%
        margin-top 9%
        font-size 1em
    .ad__presentacion
        +$responsive(mobile_not_tablet)
            +$responsive(landscape)
                height 300px
                width 20%
                margin-left 15%
        +$responsive(mobile480)
            +$responsive(portrait)
                margin-top 0
            +$responsive(landscape)
                height 400px
                width 25%
    .ad__presentacion-img
        +$responsive(mobile_not_tablet)
            margin-top 35%
            +$responsive(portrait)
                +$responsive(mobile360)
                    margin-top calc(35% + 10px)
            +$responsive(landscape)
                margin-top 60%
        +$responsive(tablet768)
            margin-top 20%
            +$responsive(portrait)
                margin-top 5%
    .ad__presentacion-btn
        +$responsive(mobile_all)
            margin 0 auto
    .ad__presentacion-copy
        +$responsive(desktop1600)
            bottom 13%
    .ad__carrusel-indicaciones
        +$responsive(mobile_all)
            font-size .9em
            line-height 1.5em
            +$responsive(landscape)
                font-size .8em
            +$responsive(portrait)
                +$responsive(tablet768)
                    font-size 1em
        +$responsive(mobile_not_tablet)
            ul
                margin 0 30px 20px 30px
            li
                &:before
                    top 6px
        ul
            +$responsive(mobile_not_tablet)
                margin 5px 20px 20px 20px !important
                font-size .7em
                li
                    &:before
                        top 6px
                +$responsive(landscape)
                    margin-bottom 10px !important
            +$responsive(tablet768)
                margin 0 20px
            +$responsive(desktop1600)
                margin-left 15%
        h4
            +$responsive(mobile_all)
                font-size 1.5em
                margin 10px 0 10px 35px
                +$responsive(landscape)
                    margin-top 5px
                    margin-bottom 5px
        .indicaciones-gotas
            +$responsive(mobile_not_tablet)
                height 15px
    .ad__carrusel-indicaciones-ribbon-rojo
        +$responsive(mobile_all)
            padding-left 35px
            +$responsive(landscape)
                height 65px
                margin-right -21px
        +$responsive(mobile_not_tablet)
            padding 0 !important 
            text-align center
            span
                line-height 2em
        +$responsive(tablet768)
            padding-left 70px
            +$responsive(portrait)
                padding-left 35px !important
                span
                    line-height 2em
        img 
            +$responsive(mobile_all)
                height 35px
                +$responsive(portrait)
                    +$responsive(mobile360)
                        height 30px
                    +$responsive(tablet768)
                        height 30px !important
                        margin-left 30px
    .ad__carrusel-indicaciones-content
        padding 5px
        +$responsive(mobile_all)
            margin-top -33px
            +$responsive(landscape)
                margin-top -29px
            +$responsive(portrait)
                margin-top -28px
        +$responsive(tablet768)
            padding-left 25px
        +$responsive(tablet1024)
            padding 15px 0 15px 16%
        +$responsive(desktop1280 desktop_extended)
            padding 15px 15px 15px 15%
        +$responsive(desktop1280)
            margin-top -32px
        +$responsive(desktop1600)
            padding 15px 20px 15px 14%
    .ad__carrusel-indicaciones-gotero
        +$responsive(mobile_all)
            align-self center
            width 15%
            +$responsive(landscape)
                margin-left -2%
            +$responsive(portrait)
                display none
                +$responsive(tablet768)
                    display block
        +$responsive(mobile_not_tablet)
            +$responsive(landscape)
                margin-left 8%
                width 10%
    .ad__carrusel-indicaciones-left
        padding 5px
        +$responsive(mobile_all)
            +$responsive(portrait)
                width 50%
        +$responsive(desktop1280 desktop1600 desktop_extended)
            padding 15px
    .ad__carrusel-indicaciones-right
        padding 5px 15px 5px 5px
        +$responsive(mobile_all)
            width 45%
            +$responsive(portrait)
                width 50%
        +$responsive(desktop1280)
            width 45%
        +$responsive(desktop1280 desktop1600 desktop_extended)
            padding 15px
    .ad__carrusel-indicaciones-footer
        +$responsive(mobile_all)
            padding 10px 5px
            p
                margin 0 10px
                line-height 1.5em
                font-size 1.2em
        +$responsive(mobile_not_tablet)
            +$responsive(landscape)
                text-align left
                margin-left 30px
    .carousel-item
        +$responsive(mobile_all)
            height 460px
            +$responsive(landscape)
                height 370px
                h2
                    font-size 1.5em
                    padding 10px 20px
            +$responsive(portrait)
                h2
                    font-size 1.2em
                    padding 15px 0 0 15px
                    +$responsive(mobile360)
                        margin-bottom 0
                ul
                    margin 0 10px
                h4
                    margin 5px 0 5px 15px
        +$responsive(mobile_not_tablet)
            +$responsive(landscape)
                height 350px
                h2
                    font-size 1.2em
                    padding 15px 0 0 20px
        +$responsive(tablet768)
            padding-top 15px
            padding-left 45px
            font-size 1.4em
            +$responsive(landscape)
                padding-right 25px
            h2
                font-size 1.5em
                padding 10px 20px
                margin-bottom 0
    .ad__modal-presentacion-carrusel
        +$responsive(mobile_all)
            width 70%
            margin 0 -7% 0 -10%
            font-size .9em
            +$responsive(landscape)
                margin 0 -11% 0 0
        +$responsive(mobile_not_tablet)
            position fixed
            margin 0
            z-index 3
            font-size 1.1em
            +$responsive(portrait)
                width 320px
                top calc(50% - 230px)
                left calc(50% - 160px)
                height 460px
            +$responsive(landscape)
                width 500px
                top calc(50% - 175px)
                left calc(50% - 250px)
                height 350px
        +$responsive(tablet768)
            margin-left -15%
            margin-top 10%
            width 70%
            +$responsive(portrait)
                font-size .9em
                margin-left -11%
        +$responsive(desktop1280)
            width 550px
    .ad__modal-close
        +$responsive(mobile_not_tablet)
            top 0
            right inherit 
            left 0
        +$responsive(tablet768)
            right 10%
            top 14%
            +$responsive(portrait)
                right 6%
                top 14%
    .ad__carrusel-ingredientes
        +$responsive(mobile_all)
            margin-left 0
            font-size .7em
            +$responsive(landscape)
                margin-bottom 5px
            +$responsive(portrait)
                flex-flow row wrap
                margin-bottom 0
                font-size .8em
        
        +$responsive(desktop1600)
            margin-left 8%
    .ad__carrusel-ingredientes-left
        +$responsive(mobile_all)
            width 50%
            +$responsive(landscape)
                width 44%
            +$responsive(portrait)
                width 90%
            ul
                margin-left 0
                padding-left 25px
        +$responsive(mobile_not_tablet)
            font-size .8em
            padding 5px 10px
    .ad__carrusel-ingredientes-right
        +$responsive(mobile_all)
            +$responsive(landscape)
                width 70%
            +$responsive(portrait)
                width 90%
                border-left none
                border-top 3px solid $color-Yellow-GoldenYellow
                margin 0 auto
        +$responsive(mobile_not_tablet)
            font-size .8em
    .ad__carrusel-contenido
        +$responsive(mobile_all)
            padding 0 15px 0 25px
            margin 0
            +$responsive(portrait)
                padding 0 7px 0 10px
                font-size .8em
        +$responsive(mobile_not_tablet)
            +$responsive(portrait)
                font-size .6em !important
            +$responsive(landscape)
                font-size .5em !important
            h3
                font-size 1.7em
            +$responsive(landscape)
                font-size .7em
            +$responsive(portrait)
                font-size 1.5em
                margin-bottom 0
                h3
                    font-size 1.5em
        +$responsive(desktop1600)
            margin-left 15%
    .ad__carrusel-contenido-highlighted
        +$responsive(mobile_all)
            +$responsive(landscape)
                margin 3px 0
        +$responsive(mobile_not_tablet)
            font-size .9em
        +$responsive(tablet768)
            +$responsive(portrait)
                margin 0
    .carousel-control-prev
        +$responsive(mobile_not_tablet)
            +$responsive(landscape)
                left 400px !important
                bottom 3px !important
    .carousel-control-next
        +$responsive(mobile_not_tablet)
            +$responsive(landscape)
                left 440px !important
                bottom 3px !important