@require globalView

#presentaciones
    $parallax()
    font-size 1em
    z-index 3
    +$responsive(mobile_all)
        flex-flow row wrap
    &.ad__adulto,
    &.ad__infantil
        z-index 5
    .ad__modal
        background $color-Blue-Smalt
.ad
    &__presentaciones
        &-container
            display flex
            margin-left 25%
            margin-top 10%
            width 60%
            align-items flex-end
            +$responsive(desktop1600 desktop_extended)
                width 50%
        &-modales 
            position fixed
            top 0
            left 0
            z-index 1
    &__presentacion
        position relative
        transition .3s
        &-copy
            position absolute
            bottom 14%
            line-height 1.1em
            font-size 12px
            +$responsive(desktop_extended)
                font-size 14px
        &-btn
            width 173px
            margin 10% auto 0 auto
            font-size 21px
            background $color-Blue-PrussianBlue
            border-radius 15px
            padding 4px
            text-transform uppercase
            $text-shadow()
            text-align center
            +$responsive(mobile320)
                width 150px
                font-size 15px
            +$responsive(desktop_all)
                font-size 28px
                padding 6px
                border-radius 20px
            +$responsive(desktop1280 desktop1600 desktop_extended)
                margin-top 5%
            a
                color white
                transition .3s
                &:hover
                    text-decoration none
                    opacity .5
        &-infantil
            width 45%
            margin 0
            +$responsive(mobile_all)
                height 460px
                +$responsive(landscape)
                    height 370px
                    width 25%
                    margin-left 8%
                +$responsive(portrait)
                    margin-top 15%
            +$responsive(tablet1024)
                width 36%
                margin-top 16%
            +$responsive(desktop1280 desktop1600 desktop_extended)
                width 44%
                margin-top 5%
            +$responsive(desktop1400)
                width 35%
            .ad-caption
                left -3%
                white-space nowrap
                +$responsive(mobile_all)
                    left 0
                    font-size .75em
                    top 5% !important
                    +$responsive(landscape)
                        left -26%
                        top 17% !important
                    +$responsive(portrait)
                        font-size .6em
                +$responsive(tablet768)
                    +$responsive(portrait)
                        top -5% !important
                    +$responsive(landscape)
                        top 5% !important
                +$responsive(desktop1400)
                    font-size 14px
                    top -7% !important
                    left -8%
        &-adulto
            width 56%
            .ad-caption
                left 36%
                white-space nowrap
                +$responsive(mobile_all)
                    top 11% !important
                    left inherit 
                    right -24%
                    +$responsive(landscape)
                        right -35%
                        top 6% !important
                    +$responsive(portrait)
                        font-size .5em
                        top 14% !important
                +$responsive(tablet768)
                    +$responsive(landscape)
                        top 4% !important
                        left 45%
                +$responsive(desktop1400)
                    font-size 14px
                    left 45%
    &__modal
        &-container
            display flex
            align-items flex-start
            position relative
            top 0
            .ad__presentacion
                z-index 1
            .ad__presentacion-via
                position absolute
                top -5%
                display none
            .ad__modal-presentacion-carrusel
