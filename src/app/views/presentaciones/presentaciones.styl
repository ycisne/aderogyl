@require globalView

#presentaciones
    $parallax('../img/fondo1.jpg')
    font-size 1em
    z-index 3
    &.ad__adulto,
    &.ad__infantil
        z-index 4
    .ad__modal
        background $color-Blue-Smalt
.ad
    &__presentaciones
        &-container
            display flex
            margin-left 25%
            margin-top 10%
            width 60%
            align-items flex-end
            +$responsive(desktop1600 desktop_extended)
                width 50%
        &-modales 
            position fixed
            top 0
            left 0
            z-index 1
    &__presentacion
        position relative
        transition .3s
        &-copy
            position absolute
            bottom 14%
            line-height 1.1em
            font-size 12px
            +$responsive(desktop_extended)
                font-size 14px
        &-btn
            width 6em
            margin 10% auto 0 auto
            font-size 2em
            background $color-Blue-PrussianBlue
            border-radius .7em
            padding .2em
            text-transform uppercase
            $text-shadow()
            text-align center
            +$responsive(desktop1280 desktop1600 desktop_extended)
                margin-top 5%
            a
                color white
                transition .3s
                &:hover
                    text-decoration none
                    opacity .5
        &-infantil
            width 36%
            margin-top 16%
            +$responsive(desktop1280 desktop1600 desktop_extended)
                width 44%
                margin-top 5%
            .ad-caption
                left -3%
        &-adulto
            width 56%
            .ad-caption
                left 36%
    &__modal
        &-container
            display flex
            align-items flex-start
            position relative
            top 0
            .ad__presentacion
                z-index 1
            .ad__presentacion-via
                position absolute
                top -5%
                display none
            .ad__modal-presentacion-carrusel
                width 60%
                padding 0
                margin-left -10%
                margin-right -15%
                display none
                margin-top 3%
                +$responsive(desktop1280)
                    width 85%
                    margin-left -13%
                    margin-right -20%
                    margin-top -6%
                +$responsive(desktop1600)
                    width 80%
                    margin-top -10%
                +$responsive(desktop1600 desktop_extended)
                    width 80%
                .carousel-control-prev,
                .carousel-control-next
                    top inherit 
                    bottom -10px
                    width  40px
                    height 40px
                    opacity 1
                    &:hover
                        opacity .5
                .carousel-control-prev
                    left calc(55% - 40px)
                .carousel-control-next
                    right calc(45% - 40px)
            .ad__modal-close
                position absolute
                right 16%
                top 7%
                width 40px
                z-index 1
                transition .3s
                +$responsive(desktop1280)
                    right -14%
                    top -5%
                +$responsive(desktop1600)
                    top -10%
                    right -12%
                +$responsive(desktop_extended)
                    right -12%
                &:hover
                    opacity .5
            .carousel-item
                color white
                font-size 1.3em
                line-height 1.5em
                height 560px
                background $color-Blue-PrussianBlue-transparent
                border-radius 20px
                padding 0
                border 20px solid $color-Blue-Smalt-transparent
                +$responsive(desktop_extended)
                    height 600px
                h2
                    color $color-Yellow-GoldenYellow
                    padding 20px 0 0 20%
                    small 
                        font-size .5em
                        display block
                        color white
                        font-family $font-alternative
                &.ad__carrusel-infantil-slide2
                    line-height 1.2em
            .ad__carrusel-ingredientes
                display flex
                margin-left 14%
                margin-bottom 15px
                font-family $font-alternative-condensed
                font-size .8em
                line-height 1.2em
                &-left
                    width 40%
                    padding 10px
                    ul
                        margin-bottom 0
                &-right
                    width 60%
                    padding 5px 15px
                    border-left 3px solid $color-Yellow-GoldenYellow
                    p
                        margin-bottom 4px
            .ad__carrusel-contenido
                padding-right 30px
                margin-left 20%
                font-family $font-alternative-condensed
                font-size .8em
                line-height 1.3em
                h3
                    color $color-Blue-PacificBlue
                    font-family $font-primary
                ul, li
                    list-style-type none
                    margin 0
                    padding 0
                li
                    position relative
                    padding-left 20px
                    padding-bottom 7px
                    &:before
                        content ''
                        position absolute
                        width 5px
                        height 5px
                        background $color-Blue-PacificBlue
                        top 5px
                        left 0
            .ad__carrusel-contenido-highlighted
                color $color-Yellow-GoldenYellow
                margin 10px 0
            .ad__carrusel-indicaciones
                ul, li
                    list-style-type none
                    margin 0
                    padding 0
                ul
                    margin-left 20%
                    margin-right 30px
                    font-family $font-alternative-condensed
                    font-size .9em
                    line-height 1.2em
                    font-weight 300
                li
                    position relative
                    padding-left 20px
                    margin-bottom 5px
                    &:before
                        content ''
                        position absolute
                        width 5px
                        height 5px
                        background $color-Yellow-GoldenYellow
                        top 14px
                        left 0
                h4
                    color $color-Red-Alizarin
                    font-size 1.9rem
                    margin 15px 0
                    margin-left 20%
                &-ribbon-amarillo,
                &-ribbon-rojo
                    background-repeat no-repeat
                    background-size cover
                    height 73px
                    font-family $font-sans
                    font-weight 700
                    z-index 1
                &-ribbon-rojo
                    background-image url(../img/ribbon-rojo.png)
                    margin-right -25px
                    background-position right top
                    color white
                    padding-left 31%
                    +$responsive(desktop1280 desktop1600)
                        height 73px
                    +$responsive(desktop_extended)
                        height 75px
                    img 
                        height 40px
                        margin-left 20px
                        +$responsive(desktop_extended)
                            height 50px
                &-ribbon-amarillo
                    background-image url(../img/ribbon-amarillo.png)
                    background-position left top
                    margin-left -25px
                    color $color-Blue-RegalBlue
                    text-align center
                    font-size 29px
                    height 77px
                    line-height 40px
                    +$responsive(desktop1280)
                        height 83px
                    +$responsive(desktop_extended)
                        height 73px
                        line-height 46px
                &-content
                    display flex
                    font-family $font-sans
                    font-size .6em
                    line-height 1.5em
                    text-align center
                    background $color-Blue-RegalBlue
                    padding 15px 15px 15px 20%
                    margin-top -23px
                    z-index -1
                    +$responsive(desktop1600)
                        padding-left 15%
                        padding-right 12px
                &-gotero
                    width 20%
                &-left,
                &-right
                    width 40%
                    padding 15px
                &-right
                    border-left 3px solid $color-Yellow-GoldenYellow
                .indicaciones-gotas
                    img 
                        height 16px
                        +$responsive(desktop_extended)
                            height 19px
                .indicaciones-gotasText
                    display block
                    color $color-Yellow-GoldenYellow
                &-footer
                    text-align center
                    font-family $font-sans
                    font-size .6em
                    padding 5px 0 0 14%
        &-infantil
            width 75%
            font-size .8em
            margin-left 22%
            margin-top 8%
            position absolute
            +$responsive(desktop1280)
                margin-top 15%
                width 55%
            +$responsive(desktop1600)
                margin-top 10%
                width 40%
                margin-left 28%
            +$responsive(desktop_extended)
                width 48%
                margin-left 25%
                margin-top 9%
                font-size 1em
            .ad__presentacion-copy
                +$responsive(desktop1600)
                    bottom 13%
            .ad__carrusel-indicaciones-content
                padding 15px 0 15px 16%
                +$responsive(desktop1280 desktop1600 desktop_extended)
                    padding 15px 15px 15px 15%
                +$responsive(desktop1280)
                    margin-top -32px
            .ad__carrusel-indicaciones-left
                padding 5px
                +$responsive(desktop1280 desktop1600 desktop_extended)
                    padding 15px
            .ad__carrusel-indicaciones-right
                padding 5px 15px 5px 5px
                +$responsive(desktop1280)
                    width 45%
                +$responsive(desktop1280 desktop1600 desktop_extended)
                    padding 15px
            .carousel-item
                width 
        &-adulto
            width 80%
            margin-top 9%
            margin-left 5%
            position absolute
            display flex
            flex-flow row wrap
            justify-content flex-end
            +$responsive(desktop1280)
                margin-top 11%
                margin-left 16%
                width 65%
            +$responsive(desktop1600)
                margin-top 7%
                margin-left 24%
                width 48%
            +$responsive(desktop_extended)
                width 51%
                margin-left 26%
                margin-top 7%
            .ad__presentacion-img
                width 111%
            .ad__presentacion-copy
                +$responsive(desktop1280)
                    bottom 18%
            .ad__presentacion-btn
                font-size 1.6em
                margin-top 8%
                +$responsive(desktop1280)
                    margin-top 7%
                +$responsive(desktop1600)
                    margin-top 3%
                +$responsive(desktop_extended)
                    font-size 2em
                    margin-top 4%
            .ad__modal-close
                right 9px
                top 3%
            .ad__carrusel-indicaciones
                font-size .9em
            .ad__carrusel-indicaciones-content
                padding-right 20% !important
            .ad__carrusel-indicaciones-left
                padding 0
                width 30%
                img 
                    width 14px
                    margin 2px
                    +$responsive(desktop1280 desktop1600 desktop_extended)
                        width 15px
            .ad__carrusel-indicaciones-right
                width 70%
                border none 
                padding 0 0 0 5px
                font-size 1.1em
                span 
                    display block
                    line-height 1.1em
                .indicaciones-ampolletasText
                    font-size 2em
                    font-weight 700
                    +$responsive(desktop1600 desktop_extended)
                        font-size 2.3em
                .indicaciones-ampolletasTime
                    font-size 1.1em
                    font-weight 700
                    color $color-Yellow-GoldenYellow
                    line-height 1.5em
                    +$responsive(desktop1600 desktop_extended)
                        font-size 1.3em
                .indicaciones-tratamiento
                    font-size 1.1em
                    line-height 1.5em
                    +$responsive(desktop1600 desktop_extended)
                        font-size 1.5em
            .ad__carrusel-banner
                $backgroundImg('../img/fondo-rojo.png', 100%, auto)
                color white
                margin-top -27px
                padding-top 5px
                +$responsive(desktop_extended)
                    margin-top -17px
                span
                    display block
                    transform rotate(-2deg)
                .indicaciones-text
                    &1
                        font-size 1.5em
                        line-height 1em
                        +$responsive(desktop1280 desktop1600 desktop_extended)
                            font-size 1.9em
                    &2
                        font-size 3.5em
                        line-height .9em
                        font-weight bold
                        +$responsive(desktop1280 desktop_extended)
                            font-size 4em
                    &3
                        font-size 1.5em
                        line-height 1.1em
                        font-weight bold
                        +$responsive(desktop1280)
                            font-size 2em
                        +$responsive(desktop1600)
                            font-size 1.7em
                        +$responsive(desktop_extended)
                            font-size 2em
                    &4
                        font-size 2em
                        font-weight bold
                        color $color-Yellow-GoldenYellow
                        line-height 3.2em
                        text-align right 
                        padding-right 1.83em
                        transform rotate(-4deg)
                    &5
                        transform none
                        font-size 1.3em
                        margin-top -18px
                        +$responsive(desktop1600)
                            margin-top 10px
                        +$responsive(desktop_extended)
                            margin-top 0
            .ad__modal-presentacion-carrusel
                width 70%
                margin-left -15%
                margin-top 0
                margin-right -5%
                position relative
                +$responsive(desktop1280)
                    width 85%
                    margin-left -20%
                    margin-right -5%
                    margin-top -5%
                +$responsive(desktop1600)
                    margin-top -5%
                    font-size .9em
                +$responsive(desktop_extended)
                    margin-top 5%
            .ad__presentacion
                width 43%
                margin-top 16%
                margin-left -12%
                +$responsive(desktop1280)
                    width 47%
                    margin-top 13%
                +$responsive(desktop1600)
                    width 48%
                    margin-top 12%
                +$responsive(desktop_extended)
                    width 53%
                    margin-top 11%
            .carousel-item
                h2
                    padding 20px 14% 0 30px
            .ad__carrusel-indicaciones
                ul
                    margin-left 35px
                    margin-right 21%
                h4
                    color $color-Yellow-GoldenYellow
                    margin-left 30px
                &-content
                    background none
                    padding 15px 20% 15px 30px
            .ad__carrusel-ingredientes
                margin-left 0
                line-height 1.3em
                margin-right 20%
                font-size 0.7em
            .ad__carrusel-contenido
                line-height 1.3em
                margin-left 30px
                margin-right 20%
                font-size 0.7em
@keyframes viewModal
    0%
        opacity 0
    100%
        opacity 1
@keyframes hideModal
    0%
        opacity 1
    100%
        opacity 0
.ad__adulto,
.ad__infantil
    .ad__modal
        display block
        left 0
        top 0
        visibility visible
        z-index 1
        animation viewModal 1s linear .3s 1 normal forwards
.ad__adulto
    .ad__modal-infantil
        z-index -1
    .ad__modal-adulto
        z-index 1
        .ad__modal-presentacion-carrusel
            display block
            opacity 0
            animation viewModal .3s linear .1s 1 normal forwards
        .ad__presentacion-btn
            opacity 1
            animation hideModal .3s linear .1s 1 normal forwards
        .ad__presentacion-via
            display block
            opacity 0
            animation viewModal .3s linear .1s 1 normal forwards
.ad__infantil
    .ad__modal-adulto
        z-index -1
    .ad__modal-infantil
        z-index 1
        .ad__modal-presentacion-carrusel
            display block
            opacity 0
            animation viewModal .3s linear .1s 1 normal forwards
        .ad__presentacion-btn
            opacity 1
            animation hideModal .3s linear .1s 1 normal forwards
        .ad__presentacion-via
            display block
            opacity 0
            animation viewModal .3s linear .1s 1 normal forwards
.ad__transition
    .ad__modal
        opacity 1 !important
        animation hideModal .3s linear .1s 1 normal forwards !important
    .ad__modal-presentacion-carrusel
        opacity 1 !important
        animation hideModal .3s linear .1s 1 normal forwards !important
    .ad__presentacion-btn
        opacity 0 !important
        animation viewModal .3s linear .1s 1 normal forwards !important
    .ad__presentacion-via
        opacity 1 !important
        animation hideModal .3s linear .1s 1 normal forwards !important