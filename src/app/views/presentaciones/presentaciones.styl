@require globalView

#presentaciones
    $parallax()
    font-size 1em
    z-index 3
    +$responsive(mobile_all)
        flex-flow row wrap
    +$responsive(iphonex)
        +$responsive(landscape)
            padding 0
    +$responsive(mobile568)
        +$responsive(landscape)
            padding-top 65px
    &.ad__adulto,
    &.ad__infantil
        z-index 7
    .ad__modal
        background $color-Blue-Smalt
.ad
    &__presentaciones
        &-container
            display flex
            margin-left 25%
            margin-top 10%
            width 60%
            align-items flex-end
            +$responsive(desktop1600 desktop_extended)
                width 50%
        &-modales 
            position fixed
            top 0
            left 0
            z-index 1
    &__presentacion
        position relative
        transition .3s
        &-copy
            position absolute
            bottom 14%
            line-height 1.1em
            font-size 12px
            +$responsive(desktop_extended)
                font-size 14px
        &-btn
            width 173px
            margin 10% auto 0 auto
            font-size 21px
            background $color-Blue-PrussianBlue
            border-radius 15px
            padding 4px
            text-transform uppercase
            $text-shadow()
            text-align center
            +$responsive(mobile320)
                width 150px
                font-size 15px
            +$responsive(desktop_all)
                font-size 28px
                padding 6px
                border-radius 20px
            +$responsive(desktop1280 desktop1600 desktop_extended)
                margin-top 5%
            a
                color white
                transition .3s
                &:hover
                    text-decoration none
                    opacity .5
        &-infantil
            width 45%
            margin 0
            +$responsive(mobile_all)
                height 460px
                +$responsive(landscape)
                    height 370px
                    width 25%
                    margin-left 8%
                +$responsive(portrait)
                    margin-top 15%
            +$responsive(tablet1024)
                width 36%
                margin-top 16%
            +$responsive(desktop1280 desktop1600 desktop_extended)
                width 44%
                margin-top 5%
            +$responsive(desktop1400)
                width 35%
            .ad-caption
                left -3%
                white-space nowrap
                +$responsive(mobile_all)
                    left 0
                    font-size .75em
                    top 5% !important
                    +$responsive(landscape)
                        left -26%
                        top 17% !important
                    +$responsive(portrait)
                        font-size .6em
                +$responsive(tablet768)
                    +$responsive(portrait)
                        right -9%
                        top -5% !important
                    +$responsive(landscape)
                        top 5% !important
                +$responsive(desktop1400)
                    font-size 14px
                    top -7% !important
                    left -8%
        &-adulto
            width 56%
            .ad-caption
                left 36%
                white-space nowrap
                +$responsive(mobile_all)
                    top 11% !important
                    left inherit 
                    right -24%
                    +$responsive(landscape)
                        right -35%
                        top 6% !important
                    +$responsive(portrait)
                        font-size .5em
                        top 14% !important
                +$responsive(tablet768)
                    +$responsive(portrait)
                        top 11% !important 
                        right -15%
                    +$responsive(landscape)
                        top 4% !important
                        left 45%
                        right inherit
                +$responsive(desktop1400)
                    font-size 14px
                    left 45%
    &__modal
        &-container
            display flex
            align-items flex-start
            position relative
            top 0
            .ad__presentacion
                z-index 1
            .ad__presentacion-via
                position absolute
                top -5%
                display none
            .ad__modal-presentacion-carrusel
                width 60%
                padding 0
                margin-left -10%
                margin-right -15%
                display none
                margin-top 3%
                +$responsive(desktop1280)
                    width 85%
                    margin-left -13%
                    margin-right -20%
                    margin-top -6%
                +$responsive(desktop1600)
                    margin-top -10%
                    width 500px
                +$responsive(desktop_extended)
                    width 700px
                .carousel-control-prev,
                .carousel-control-next
                    top inherit 
                    bottom -10px
                    width  40px
                    height 40px
                    opacity 1
                    &:hover
                        opacity .5
                .carousel-control-prev
                    left calc(55% - 40px)
                .carousel-control-next
                    right calc(45% - 40px)
            .ad__modal-close
                position absolute
                right 16%
                top 7%
                width 40px
                z-index 1
                transition .3s
                +$responsive(desktop1280)
                    right -8%
                    top -5%
                +$responsive(desktop1400)
                    right 10%
                    top -6%
                +$responsive(desktop1600)
                    top -10%
                    right -12%
                +$responsive(desktop_extended)
                    right -9%
                &:hover
                    opacity .5
            .carousel-item
                color white
                font-size 1.3em
                line-height 1.5em
                height 560px
                background $color-Blue-PrussianBlue-transparent
                border-radius 20px
                padding 0
                border 20px solid $color-Blue-Smalt-transparent
                +$responsive(desktop1400)
                    height 530px
                +$responsive(desktop_extended)
                    height 600px
                h2
                    color $color-Yellow-GoldenYellow
                    padding 20px 0 0 20%
                    small 
                        font-size .5em
                        display block
                        color white
                        font-family $font-alternative
                &.ad__carrusel-infantil-slide2
                    line-height 1.2em
                    +$responsive(tablet768)
                        +$responsive(landscape)
                            padding 20px 20px 0 45px
                    +$responsive(iphonex)
                        +$responsive(landscape)
                            padding 0
                    +$responsive(desktop1280)
                        padding-right 25px
                        padding-top 20px
                    +$responsive(desktop1600)
                        padding-right 20px
                        padding-top 20px
                        h2
                            padding-left 15%
            .ad__carrusel-ingredientes
                display flex
                margin-left 14%
                margin-bottom 15px
                font-family $font-alternative-condensed
                font-size .8em
                line-height 1.2em
                &-left
                    width 40%
                    padding 10px
                    ul
                        margin-bottom 0
                &-right
                    width 60%
                    padding 5px 15px
                    border-left 3px solid $color-Yellow-GoldenYellow
                    p
                        margin-bottom 4px
            .ad__carrusel-contenido
                padding-right 30px
                margin-left 20%
                font-family $font-alternative-condensed
                font-size .8em
                line-height 1.3em
                h3
                    color $color-Blue-PacificBlue
                    font-family $font-primary
                ul, li
                    list-style-type none
                    margin 0
                    padding 0
                li
                    position relative
                    padding-left 20px
                    padding-bottom 7px
                    &:before
                        content ''
                        position absolute
                        width 5px
                        height 5px
                        background $color-Blue-PacificBlue
                        top 5px
                        left 0
            .ad__carrusel-contenido-highlighted
                color $color-Yellow-GoldenYellow
                margin 10px 0
            .ad__carrusel-indicaciones
                ul, li
                    list-style-type none
                    margin 0
                    padding 0
                ul
                    margin-left 20%
                    margin-right 30px
                    font-family $font-alternative-condensed
                    font-size .9em
                    line-height 1.2em
                    font-weight 300
                li
                    position relative
                    padding-left 20px
                    margin-bottom 5px
                    &:before
                        content ''
                        position absolute
                        width 5px
                        height 5px
                        background $color-Yellow-GoldenYellow
                        top 14px
                        left 0
                h4
                    color $color-Red-Alizarin
                    font-size 1.9rem
                    margin 15px 0
                    margin-left 20%
                &-ribbon-amarillo,
                &-ribbon-rojo
                    background-repeat no-repeat
                    background-size cover
                    height 73px
                    font-family $font-sans
                    font-weight 700
                    z-index 1
                &-ribbon-rojo
                    background-image url(../img/ribbon-rojo.png)
                    margin-right -25px
                    background-position right top
                    color white
                    padding-left 31%
                    +$responsive(mobile_all)
                        +$responsive(portrait)
                            padding-left 14px !important
                            height 62px
                            margin-right -20px
                            span
                                line-height 2.5em
                            img 
                                height 30px
                                margin-left 10px
                    +$responsive(desktop1280 desktop1600)
                        height 73px
                    +$responsive(desktop_extended)
                        height 75px
                    img 
                        height 40px
                        margin-left 20px
                        +$responsive(desktop_extended)
                            height 50px
                &-ribbon-amarillo
                    background-image url(../img/ribbon-amarillo.png)
                    background-position left top
                    margin-left -25px
                    color $color-Blue-RegalBlue
                    text-align center
                    font-size 29px
                    height 77px
                    line-height 40px
                    +$responsive(mobile_all)
                        +$responsive(landscape)
                            font-size 23px
                            height 60px
                            margin-left -20px
                            line-height 33px
                        +$responsive(portrait)
                            height 64px
                            line-height 27px
                            margin-left -21px
                            font-size 20px
                            +$responsive(mobile375)
                                line-height 35px
                            +$responsive(mobile360)
                                height 50px
                                margin-left -16px
                    +$responsive(desktop1280)
                        height 83px
                    +$responsive(desktop1400)
                        height 87px
                        margin-left -28px
                        line-height 50px
                    +$responsive(desktop_extended)
                        height 73px
                        line-height 46px
                &-content
                    display flex
                    font-family $font-sans
                    font-size .6em
                    line-height 1.5em
                    text-align center
                    background $color-Blue-RegalBlue
                    padding 15px 15px 15px 20%
                    margin-top -23px
                    z-index -1
                    +$responsive(desktop1600)
                        padding-left 15%
                        padding-right 12px
                &-gotero
                    width 20%
                &-left,
                &-right
                    width 40%
                    padding 15px
                &-right
                    border-left 3px solid $color-Yellow-GoldenYellow
                .indicaciones-gotas
                    img 
                        height 16px
                        +$responsive(mobile_all)
                            height 11px
                            +$responsive(portrait)
                                +$responsive(mobile360)
                                    height 8px
                        +$responsive(desktop_extended)
                            height 19px
                .indicaciones-gotasText
                    display block
                    color $color-Yellow-GoldenYellow
                &-footer
                    text-align center
                    font-family $font-sans
                    font-size .6em
                    padding 5px 0 0 14%

@import "presentaciones-infantil.styl"

@import "presentaciones-adulto.styl"

@keyframes viewModal
    0%
        opacity 0
    100%
        opacity 1
@keyframes hideModal
    0%
        opacity 1
    100%
        opacity 0
.ad__adulto,
.ad__infantil
    .ad__modal
        display block
        left 0
        top 0
        visibility visible
        z-index 1
        animation viewModal 1s linear .3s 1 normal forwards
.ad__adulto
    .ad__modal-infantil
        z-index -1
    .ad__modal-adulto
        z-index 1
        .ad__modal-presentacion-carrusel
            display block
            opacity 0
            animation viewModal .3s linear .1s 1 normal forwards
        .ad__presentacion-btn
            opacity 1
            animation hideModal .3s linear .1s 1 normal forwards
        .ad__presentacion-via
            display block
            opacity 0
            animation viewModal .3s linear .1s 1 normal forwards
        .ad__presentacion
            +$responsive(mobile_not_tablet iphonex)
                opacity 1
                animation hideModal .3s linear .1s 1 normal forwards
.ad__infantil
    .ad__modal-adulto
        z-index -1
    .ad__modal-infantil
        z-index 1
        .ad__modal-presentacion-carrusel
            display block
            opacity 0
            animation viewModal .3s linear .1s 1 normal forwards
        .ad__presentacion-btn
            opacity 1
            animation hideModal .3s linear .1s 1 normal forwards
        .ad__presentacion-via
            display block
            opacity 0
            animation viewModal .3s linear .1s 1 normal forwards
        .ad__presentacion
            +$responsive(mobile_not_tablet iphonex)
                opacity 1
                animation hideModal .3s linear .1s 1 normal forwards
.ad__transition
    .ad__modal
        opacity 1 !important
        animation hideModal .3s linear .1s 1 normal forwards !important
    .ad__modal-presentacion-carrusel
        opacity 1 !important
        animation hideModal .3s linear .1s 1 normal forwards !important
    .ad__presentacion-btn
        opacity 0 !important
        animation viewModal .3s linear .1s 1 normal forwards !important
    .ad__presentacion-via
        opacity 1 !important
        animation hideModal .3s linear .1s 1 normal forwards !important
    .ad__presentacion
        +$responsive(mobile_not_tablet iphonex)
            opacity 0 !important
            animation viewModal .3s linear .1s 1 normal forwards !important