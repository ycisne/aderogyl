@require globalView

.ad__queEs
    $parallax('../img/fondo1.jpg')
    &-carrusel
        position absolute
        margin-left 60%
        width 30%
        top 40%
        z-index 1
        +$responsive(desktop1024)
            width 25%
            margin-left 62%
        .carousel-item
            height 50%
            width 100%
        .left-carousel
        .right-carousel
            width 60px
            height 93px
            background-repeat no-repeat
            background-size cover
            +$responsive(desktop1024)
                width 50px
                height 80px
        .left-carousel
            background-image url(../img/left-carousel.png)
        .right-carousel
            background-image url(../img/right-carousel.png)
        .carousel-control-prev
            opacity 1
            left -65px
        .carousel-control-next
            opacity 1
            right -65px
        .ad__queEs-slide1,
        .ad__queEs-slide2
            color white
            $text-shadow()
            font-size 20px
            line-height 15px
            padding 30px 0
            text-align center
        .ad__queEs-slide1
            .linea1
                font-size 5.1em
                line-height .8em
                font-family $font-secondary
                +$responsive(desktop1024)
                    font-size 3em
                    line-height 0.5em
            .linea2
                font-size 3em
                line-height .3em
                +$responsive(desktop1024)
                    font-size 1.8em
                    line-height 0.3em
            .linea3
                font-size 3.7em
                line-height .8em
                +$responsive(desktop1024)
                    font-size 2.2em
                    line-height 0.5em
            .linea4
                font-size 3.8em
                line-height .3em
                font-family $font-secondary
                +$responsive(desktop1024)
                    font-size 2.2em
                    line-height 0.3em
        .ad__queEs-slide2
            padding-top 60px
            .linea1
                font-size 100px
                line-height 70px
                font-family $font-secondary
            .linea2
                font-size 45px
            .linea3
                font-size 50px
                line-height 25px
                font-family $font-secondary
    &-mainImg
        margin 7% 15% 1% 25%
        position relative
        display flex
        justify-content center
        flex-flow row wrap
        align-items flex-end
        z-index -1
    &-img
        width 40%
        z-index 2
        &-caption
            width 70%
            margin-right 30%
            margin-bottom 3%
            text-align center
    &-frase
        width 60%
        margin-left -12%
        z-index 1
        display flex
        flex-flow row wrap
        color white
        $text-shadow()
        text-transform uppercase
        &1
            $backgroundImg('../img/fondo-azul.png', 100%, 140px)
            font-size 80px
            padding-left 70px
            padding-top 5px
            z-index 2
            font-family $font-secondary
            span 
                transform rotate(-2deg)
                display inline-block
        &2
            $backgroundImg('../img/fondo-rojo.png', 100%, 150px)
            font-size 75px
            margin-top -40px
            z-index 1
            padding 10px 0 0 92px
            span 
                transform rotate(-4deg)
                display inline-block

        &3
            width 100%
            z-index 3
            height 150px
            padding 5px 0 20px 125px
            font-size 80px
            margin-top -50px
            margin-bottom 40px
            display flex
            transform rotate(-4deg)
            .frase3
                &-item1
                    color $color-Yellow-GoldenYellow
                    margin-right 10px
                    font-family $font-secondary 
                    font-size 100px
                    line-height 110px
                &-item2
                    margin 0 5px
                &-item3
                    color $color-Yellow-GoldenYellow
                    margin-left 10px
                    font-family $font-secondary 
                    line-height 112px
    &-slogans
        width 100%
        display flex
        align-items flex-start
    &-slogan
        width 50%
        color white
        font-size 35px
        text-transform uppercase
        $text-shadow()
        text-align center
        display flex
        flex-flow row wrap
        &-top
            $backgroundImg('../img/fondo-azul2.png', 100%, 80px)
            background-position: center top
            z-index 2
            span 
                transform rotate(-1deg)
                margin-top 10px
                display inline-block
        &-bottom
            $backgroundImg('../img/fondo-rojo2.png', 100%, 100px)
            background-position: center top
            margin-top -55px
            z-index 1
            span 
                transform rotate(-2deg)
                display inline-block
                margin-top 38px
                margin-right 10px
                font-size 25px
    &-logo-sanofi
        background white
        padding 4px 40px
        text-align right
        position absolute
        top 0
        left 0
        width 100%
        .container
            width 100%
            padding 0
            margin 0
        img
            height 19px
    &-residentes
        background $color-Blue-DarkCerulean 
        padding 5px 40px
        text-align right 
        color white
        $text-shadow()
        text-transform uppercase
        position absolute
        top 35px
        left 0
        width 100%
        font-size .8em
    &-modales
        position fixed
        top 0
        left 0
        z-index 2
    &-video
        position absolute
        top 66px
        right 20px
        display flex
        justify-content flex-end
        z-index 2
        a
            $backgroundImg('../img/fondo-rojo.png', 240px, 90px)
            .video-text
                display flex
                transform rotate(-4deg)
                font-size 30px
                text-transform uppercase
                color white
                align-items center
                $text-shadow()
                margin 5px 15px
                transition color 1s
                .video-ico
                    $backgroundImg('../img/ico-play.png', 32px, 32px)
                span 
                    margin-left 10px
            &:hover
                text-decoration none
                .video-text
                    color $color-Yellow-GoldenYellow
                    .video-ico
                        background-image url('../img/ico-play-hover.png')

.ad__video-modal-content
    width 100%
    position relative
    .close
        position absolute
        top 0
        right 10px
        z-index 2
        color white
        font-size 2em
