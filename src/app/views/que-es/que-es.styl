@require globalView

.ad__queEs
    $parallax()
    font-size 0.75em
    +$responsive(desktop1600)
        font-size .8em
    +$responsive(desktop1280 desktop_extended)
        font-size 1em
    &-mainImg
        margin 5% 10% 1% 20%
        position relative
        display flex
        justify-content center
        flex-flow row wrap
        align-items flex-end
        +$responsive(mobile_all)
            margin 15% 0 1% 0
        +$responsive(iphonex)
            +$responsive(landscape)
                margin-top 1%
        +$responsive(desktop1400)
            margin-left 25%
            margin-right 20%
        +$responsive(desktop1600)
            margin-left 25%
            margin-right 25%
        +$responsive(desktop_extended)
            margin-right 20%
    &-img
        width 70%
        z-index 2
        +$responsive(mobile_all)
            width 45%
        +$responsive(iphonex)
            +$responsive(landscape)
                width 40%
        +$responsive(landscape)
            +$responsive(iphonex)
                width 35%
            +$responsive(mobile480)
                width 60%
            +$responsive(mobile568 mobile360)
                width 45%
        /*&-caption
            width 100%
            margin-bottom 3%
            text-align center*/
    &-beneficios
        padding 0
        margin-top 10%
        +$responsive(iphonex)
            +$responsive(landscape)
                margin 15px 20% 0 20%
                max-width 60%
