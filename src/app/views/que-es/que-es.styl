@require globalView

.ad__queEs
    $parallax('../img/fondo1.jpg')
    &-carrusel
        position absolute
        margin-left 60%
        width 30%
        top 40%
        z-index 1
        +$responsive(desktop1024)
            width 25%
            margin-left 62%
        .carousel-item
            height 50%
            width 100%
        .left-carousel
        .right-carousel
            width 60px
            height 93px
            background-repeat no-repeat
            background-size cover
            +$responsive(desktop1024)
                width 50px
                height 80px
        .left-carousel
            background-image url(../img/left-carousel.png)
        .right-carousel
            background-image url(../img/right-carousel.png)
        .carousel-control-prev
            opacity 1
            left -65px
        .carousel-control-next
            opacity 1
            right -65px
        .ad__queEs-slide1,
        .ad__queEs-slide2
            color white
            $text-shadow()
            font-size 20px
            line-height 15px
            padding 30px 0
            text-align center
        .ad__queEs-slide1
            .linea1
                font-size 5.1em
                line-height .8em
                font-family $font-secondary
                +$responsive(desktop1024)
                    font-size 3em
                    line-height 0.5em
            .linea2
                font-size 3em
                line-height .3em
                +$responsive(desktop1024)
                    font-size 1.8em
                    line-height 0.3em
            .linea3
                font-size 3.7em
                line-height .8em
                +$responsive(desktop1024)
                    font-size 2.2em
                    line-height 0.5em
            .linea4
                font-size 3.8em
                line-height .3em
                font-family $font-secondary
                +$responsive(desktop1024)
                    font-size 2.2em
                    line-height 0.3em
        .ad__queEs-slide2
            padding-top 60px
            .linea1
                font-size 100px
                line-height 70px
                font-family $font-secondary
            .linea2
                font-size 45px
            .linea3
                font-size 50px
                line-height 25px
                font-family $font-secondary
    &-img
        height 100%
        margin auto
        position relative
        &-caption
            position absolute
            bottom 10%
            left 12%
            text-align right
            +$responsive(desktop1280 desktop1600 desktop_extended)
                left 16%
    &-logo-sanofi
        background white
        padding 4px 40px
        text-align right
        position absolute
        top 0
        left 0
        width 100%
        .container
            width 100%
            padding 0
            margin 0
        img
            height 19px
    &-residentes
        background $color-Blue-DarkCerulean 
        padding 5px 40px
        text-align right 
        color white
        $text-shadow()
        text-transform uppercase
        position absolute
        top 35px
        left 0
        width 100%
        font-size .8em
    &-modales
        position fixed
        top 0
        left 0
        z-index 1
.ad__video-modal-content
    width 100%
    position relative
    .close
        position absolute
        top 0
        right 10px
        z-index 2
        color white
        font-size 2em
