@require globalView

.ad__footer
    background-image  url(../img/fondo-footer.png)
    width 100%
    background-position center top
    background-repeat no-repeat
    background-size cover
    display flex
    align-items center
    z-index 1
    position relative
    padding 8% 30px 30px 30px
    margin-top -9%
    flex-flow row wrap
    color white
    font-size .8em
    font-family sans-serif
    $text-shadow()
    p
        margin 0
    &-left
        width 33%
        text-align left 
    &-right
        width 33%
        text-align right 
    &-center
        width 34%
        text-align center
    &-legales
        width 100%
        text-align center
        ul, li
            list-style-type none
            margin 0
            padding 0
        li
            display inline-block
            a
                text-decoration underline
                color white
                transition .3s
                padding 20px
                &:hover
                    opacity .8
