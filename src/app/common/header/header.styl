@require globalView

.ad__header
    .container
        width 100%
        padding 0
        margin 0
    &-left-menu
        position fixed
        width 100%
        top 0
        z-index 1
    &-logo
        padding 80px 0 0 50px
    &-menu
        width 350px
        margin-top -3%
        li, ul
            list-style-type none
            margin 0
            padding 0
        &-principal
            li
                position relative
                a
                    color transparent
                    transition .3s
                    font-size 45px
                    display flex
                    span 
                        display block
                        padding 18px 0 0 0
                        line-height 1.1em
                        width calc(100% - 80px)
                    &:before
                        content ''
                        width 80px
                        height 80px
                        background-image url(../img/boton-menu.png)
                        background-repeat no-repeat
                        background-size 100% auto
                        background-position center center
                        transition .3s
                    &:hover,
                    &.active
                        color white
                        $text-shadow()
                        text-decoration none
                        &:before
                            background-size 185% auto
                    &.active
                        cursor default
                        &:before
                            background-image url(../img/boton-menu-resplandor.png)
        &-redes
            position fixed
            bottom 20px
            left 10px
            a
                display block
                padding 10px 15px
                transition .3s
                &:hover
                    opacity .5
                img
                    width 30px
                    height 30px
                    display block